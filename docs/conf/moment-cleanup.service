[Unit]
Description=Run Moment App Temp File Cleanup
After=network.target

[Service]
Type=oneshot
User=hronop
WorkingDirectory=/home/hronop/node/moment
# Используем полный путь к node. Проверьте через `which node`
ExecStart=/usr/bin/node scripts/cleanup-temp.js
StandardOutput=append:/var/log/moment-cleanup.log
StandardError=append:/var/log/moment-cleanup.log

[Install]
WantedBy=multi-user.target
